{
  "name": "scenario-2",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-Tenant SaaS API Gateway - Reono Integration Scenario 2",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:build dev:serve",
    "dev:build": "vite build --watch",
    "dev:serve": "wait-on dist/index.js && nodemon --watch dist --delay 500ms dist/index.js",
    "build": "vite build",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run src/__tests__/integration.test.tsx"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.4.1",
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@reono/client": "workspace:*",
    "@reono/node-server": "workspace:*",
    "reono": "workspace:*",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.4"
  }
}
