{
  "name": "@reono/root",
  "version": "0.0.1",
  "private": false,
  "description": "Reono monorepo root package",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ntropish/reono.git"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "test:watch": "turbo test --watch",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "publish-packages": "turbo run build lint test && changeset version && changeset publish"
  },
  "devDependencies": {
    "@codemod.com/workflow": "^0.0.31",
    "@reono/eslint-config": "workspace:*",
    "@reono/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@changesets/cli": "^2.29.6"
  }
}
